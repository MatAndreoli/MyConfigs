{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.31/schema.bar.json",
  "monitor": {
    "index": 1,
    "work_area_offset": {
      "left": 0,
      "top": 40,
      "right": 0,
      "bottom": 20
    }
  },
  "grouping": {
    "kind": "Bar",
    "rounding": 3,
    "style": "DefaultWithShadowB4O1S3",
    "transparency_alpha": 130
  },
  "font_family": "JetBrainsMono Nerd Font",
  "transparency_alpha": 0,
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "accent": "Sky"
  },
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Cpu": {
        "enable": true
      }
    },
    {
      "Memory": {
        "enable": true
      }
    },
    {
      "Network": {
        "enable": true,
        "label_prefix": "Icon",
        "show_total_data_transmitted": true,
        "show_network_activity": true
      }
    },
    {
      "Date": {
        "enable": true,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwentyFourHour",
        "label_prefix": "Icon"
      }
    }
  ]
}
