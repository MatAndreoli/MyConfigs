#!/bin/bash

export EDITOR=nvim
export MY_CONFIGS_DIR=
export VIVO_REPOS=
export VIVO_USR=
export VIVO_PSW=

export AZURE_ARTIFACTS_TOKEN=
export AZURE_ARTIFACTS_PAT_BASE64="$(echo -n $AZURE_ARTIFACTS_TOKEN | base64)"

export FLOW_CLIENT_ID=
export FLOW_CLIENT_SECRET=
export FLOW_TENANT=
export CLIENT=$FLOW_CLIENT_ID
export CLIENT=$FLOW_CLIENT_SECRET
export TENANT=$FLOW_TENANT

export MVE_NEXUS_USR=$VIVO_USR
export MVE_NEXUS_PSW=$VIVO_PSW
export MVE_NEXUS_TOKEN="$(echo -n $VIVO_USR':'$VIVO_PSW | base64)"

export USER_MATRI=$VIVO_USR
export PASS_MATRI=$VIVO_PSW

export DEPS_CREDENTIAL_USER=$VIVO_USR
export DEPS_CREDENTIAL_USR=$VIVO_USR
export DEPS_CREDENTIAL_PSW=$VIVO_PSW

export GOROOT=/usr/local/go
export GOPATH=$GOROOT/bin
export PATH=$GOPATH:$GOROOT/bin:$PATH
export PATH=$HOME/bin:/usr/local/bin:$PATH
export PATH="$PATH:$HOME/.rvm/bin"

# export JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
export JAVA_HOME='/usr/lib/jvm/jdk-17.0.12-oracle-x64'
#export JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64
export PATH=$PATH:$JAVA_HOME/bin

export ANDROID_HOME="$HOME/Android/Sdk"
export ANDROID_SDK_ROOT=$ANDROID_HOME/platform-tools/

export PATH=$PATH:$ANDROID_SDK_ROOT

export PUB_CREDENTIAL_USR=$VIVO_USR
export PUB_CREDENTIAL_PSW=$VIVO_PSW

export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"

export ARXAN_PATH="/opt/arxan/4.12.0/bin"
export PATH="$PATH:/opt/nvim-linux64/bin"
